<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@mipmap/leave_historybg"
  android:orientation="vertical">
  <LinearLayout
    android:layout_marginTop="22dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="22dp"
    android:gravity="center_vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
      android:id="@+id/tvType"

      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="16sp"
      android:textColor="@color/black"
      />
    <View
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:layout_weight="1"/>
    <TextView
      android:id="@+id/tvState"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingLeft="7dp"
      android:paddingRight="7dp"
      android:gravity="center"
      android:textSize="15sp"
      android:textColor="@color/white"
      />

  </LinearLayout>
  <View
    android:layout_width="match_parent"
    android:layout_marginLeft="22dp"
    android:layout_marginRight="22dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="12dp"
    android:layout_height="1dp"
    android:background="@color/line_dark"/>
  <LinearLayout
    android:layout_marginLeft="29dp"
    android:layout_marginRight="29dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
      android:src="@mipmap/time_start"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
    <TextView
      android:id="@+id/tvBeginTime"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="7dp"
      android:textColor="@color/black"
      android:textSize="16sp"
      android:text="2017-12-16 08:00"
      />

  </LinearLayout>
  <LinearLayout
    android:layout_marginLeft="29dp"
    android:layout_marginTop="3dp"
    android:layout_marginRight="29dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
      android:src="@mipmap/time_end"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
    <TextView
      android:id="@+id/tvEndTime"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="7dp"
      android:textColor="@color/black"
      android:textSize="16sp"
      android:text="2017-12-16 08:00"
      />

  </LinearLayout>
  <RelativeLayout
    android:layout_marginLeft="29dp"
    android:layout_marginTop="3dp"
    android:layout_marginRight="29dp"
    android:gravity="center_vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
      android:layout_centerVertical="true"
      android:id="@+id/reR"
      android:src="@mipmap/reason"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      android:layout_alignParentLeft="true"/>
    <TextView
      android:id="@+id/tvReason"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/reR"
      android:layout_marginLeft="7dp"
      android:singleLine="true"
      android:textColor="@color/describe_dark"
      android:textSize="16sp"
      />

  </RelativeLayout>



</LinearLayout>