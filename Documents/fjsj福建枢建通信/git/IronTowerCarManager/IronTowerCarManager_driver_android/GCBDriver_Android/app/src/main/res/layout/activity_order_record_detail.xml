<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"

  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".mvp.ui.activity.OrderRecordActivity">
  <ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/bg"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      app:contentInsetStart="0dp"

      >
      <RelativeLayout
        android:id="@+id/toolbar_back"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"

        android:clickable="true"
        android:focusable="true">
        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:src="@mipmap/ic_arrow_back_white_24dp"/>
      </RelativeLayout>


      <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp"/>

    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
      android:id="@+id/scrollView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:visibility="gone"

     >
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <LinearLayout
          android:id="@+id/layDetail"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:background="@mipmap/item_blue_bg"
          android:orientation="vertical"
          >
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:gravity="center_vertical">
            <de.hdodenhof.circleimageview.CircleImageView

              android:layout_width="43dp"
              android:layout_height="43dp"
              android:src="@mipmap/passenger_photo"/>
            <TextView
              android:id="@+id/tvPassenger"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="12sp"
              android:textColor="@color/black"
              android:textSize="16sp"
              />
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="12dp"
              android:text="(乘客)"
              android:textColor="@color/describe_dark"
              android:textSize="16sp"
              />
            <View
              android:layout_width="0dp"
              android:layout_height="1dp"
              android:layout_weight="1"/>
            <ImageView
              android:id="@+id/ivCall"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@mipmap/call_btn"/>
          </LinearLayout>
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="28dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
              android:id="@+id/tvPassengerNum"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingTop="1dp"
              android:paddingBottom="1dp"
              android:paddingLeft="7dp"
              android:paddingRight="7dp"
              android:background="@mipmap/label_blue"
              android:includeFontPadding="false"
              android:textColor="@color/white"
              android:textSize="16sp"/>

            <TextView
              android:id="@+id/tvCarType"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:layout_marginLeft="9dp"
              android:paddingTop="1dp"
              android:paddingBottom="1dp"
              android:paddingLeft="7dp"
              android:paddingRight="7dp"
              android:background="@mipmap/label_red"
              android:includeFontPadding="false"
              android:textColor="@color/white"
              android:textSize="16sp"/>


            <TextView
              android:id="@+id/tvCarUse"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:layout_marginLeft="9dp"
              android:paddingTop="1dp"
              android:paddingBottom="1dp"
              android:paddingLeft="7dp"
              android:paddingRight="7dp"
              android:background="@mipmap/label_yellow"
              android:includeFontPadding="false"
              android:textColor="@color/white"
              android:textSize="16sp"/>

          </LinearLayout>
          <TextView
            android:id="@+id/tvOrgName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="28dp"

            android:textColor="@color/describe_dark"
            android:textSize="16sp" />

          <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"

            android:layout_marginBottom="8dp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:background="@color/line_dark"/>
          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="申请时间:"
              android:textColor="@color/describe_dark"
              android:textSize="16sp"/>
            <TextView
              android:id="@+id/tvCreateTime"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:textColor="@color/describe_dark"
              android:textSize="16sp"/>

          </LinearLayout>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:background="@mipmap/graybg"
            android:orientation="vertical">
            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="11dp"
              android:layout_marginLeft="11dp"
              android:layout_marginRight="11dp"
              android:gravity="center_vertical"
              android:orientation="horizontal">
              <TextView
                android:id="@+id/tvBeginTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"

                android:textSize="17sp"/>
              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="出发"
                android:textColor="@color/black"

                android:textSize="17sp"/>
              <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
              <TextView
                android:id="@+id/tvDistanceType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#a09d9d"
                android:textSize="15sp"
                />
            </LinearLayout>
            <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_marginTop="11dp"

              android:layout_marginBottom="11dp"
              android:layout_marginLeft="12dp"
              android:layout_marginRight="12dp"
              android:background="@color/line_dark"/>
            <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal">
              <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:src="@mipmap/green_dot"/>
              <TextView
                android:id="@+id/tvBeginAddr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:paddingRight="28dp"
                android:singleLine="true"

                android:textColor="@color/black"
                android:textSize="16sp"/>
            </LinearLayout>
            <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="13dp"
              android:src="@mipmap/go"
              />
            <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal">
              <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:src="@mipmap/red_dot"/>
              <TextView
                android:id="@+id/tvEndAddr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:paddingRight="28dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="16sp"/>
            </LinearLayout>
            <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_marginTop="11dp"
              android:layout_marginLeft="12dp"
              android:layout_marginRight="12dp"
              android:background="@color/line_dark"/>
            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="11dp"
              android:layout_marginLeft="11dp"
              android:layout_marginRight="11dp"
              android:gravity="center_vertical"
              android:orientation="horizontal">
              <TextView
                android:id="@+id/tvEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"

                android:textSize="17sp"/>
              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="返回"
                android:textColor="@color/black"

                android:textSize="17sp"/>

            </LinearLayout>


          </LinearLayout>
          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="26dp"

            android:layout_marginRight="26dp"
            android:orientation="horizontal">
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:maxLines="2"
              android:text="备注信息:"
              android:textColor="@color/describe_dark"
              android:textSize="16sp"/>

            <TextView
              android:id="@+id/tvRemark"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/describe_dark"
              android:textSize="16sp"/>


          </LinearLayout>
          <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <LinearLayout
              android:id="@+id/layShrink"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:gravity="center_horizontal"
              android:orientation="vertical">
              <View
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:layout_marginTop="7dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:background="@color/line_dark"/>
              <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:src="@mipmap/up"/>
              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/click_view_shrink"
                android:textColor="@color/describe_dark"
                android:textSize="16sp"/>
            </LinearLayout>
          </RelativeLayout>

        </LinearLayout>
        <RelativeLayout
          android:id="@+id/layExpand"
          android:visibility="gone"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:background="@mipmap/morebg">
          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/click_view_expand"
              android:textColor="@color/describe_dark"
              android:textSize="16sp"/>
            <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="1dp"
              android:src="@mipmap/down"/>
          </LinearLayout>
        </RelativeLayout>


        <LinearLayout
          android:id="@+id/layOrderTracks"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:background="@mipmap/item_blue_bg"
          android:orientation="vertical">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"

            android:gravity="center_vertical"
            android:orientation="vertical">
            <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="24dp"
              android:layout_marginRight="24dp"
              android:gravity="center_vertical"
              android:orientation="horizontal">
              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="派车单号:"
                android:textColor="@color/black"
                android:textSize="17sp"/>
              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/describe_dark"
                android:textSize="16sp"
                />
              <TextView
                android:id="@+id/tvOrderNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/describe_dark"
                android:textSize="16sp"
                />
            </LinearLayout>
            <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_marginTop="5dp"
              android:layout_marginBottom="12dp"
              android:layout_marginLeft="21dp"
              android:layout_marginRight="21dp"
              android:background="@color/line_dark"/>
            <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:layout_marginLeft="24dp"
              android:layout_marginRight="24dp"
              android:orientation="horizontal">
              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前节点:"
                android:textColor="@color/black"

                android:textSize="17sp"/>
              <TextView
                android:id="@+id/tvProcess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:textColor="#ff6565"
                android:textSize="17sp"/>

            </LinearLayout>


          </LinearLayout>
          <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp">

          </android.support.v7.widget.RecyclerView>
          <LinearLayout
            android:id="@+id/layPayBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            android:background="@mipmap/btn_trajectory"
            android:gravity="center">
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/payback_trace"
              android:textColor="@color/colorPrimary"
              android:textSize="16sp"/>
          </LinearLayout>


        </LinearLayout>
        <LinearLayout
          android:id="@+id/layComment"
          android:visibility="gone"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@mipmap/order_bg1"
          android:orientation="vertical">
          <LinearLayout
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:layout_marginRight="34dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="34dp"
              android:textSize="15sp"
              android:text="@string/speed"
              android:textColor="@color/black"/>
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="15sp"
              android:text="和"
              android:visibility="invisible"
              android:textColor="@color/black"/>
            <ImageView
              android:id="@+id/ivSpeed1"
              android:paddingLeft="15dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"

              android:src="@mipmap/star_gray"/>
            <ImageView
              android:id="@+id/ivSpeed2"

              android:layout_width="wrap_content"
              android:paddingLeft="6dp"
              android:layout_height="wrap_content"
              android:src="@mipmap/star_gray"/>
            <ImageView
              android:id="@+id/ivSpeed3"
              android:layout_width="wrap_content"
              android:paddingLeft="6dp"

              android:layout_height="wrap_content"
              android:src="@mipmap/star_gray"/>
            <ImageView
              android:id="@+id/ivSpeed4"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="6dp"

              android:src="@mipmap/star_gray"/>
            <ImageView
              android:id="@+id/ivSpeed5"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="6dp"

              android:src="@mipmap/star_gray"/>

            <TextView
              android:id="@+id/tvSpeed"
              android:textSize="14sp"
              android:textColor="@color/describe_dark"
              android:layout_marginLeft="5dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
          </LinearLayout>
          <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginRight="34dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="34dp"
              android:textSize="15sp"
              android:text="@string/service"
              android:textColor="@color/black"/>

            <ImageView
              android:id="@+id/ivService1"
              android:paddingLeft="15dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"

              android:src="@mipmap/star_gray"/>
            <ImageView
              android:id="@+id/ivService2"
              android:layout_width="wrap_content"
              android:paddingLeft="6dp"
              android:layout_height="wrap_content"
              android:src="@mipmap/star_gray"/>
            <ImageView
              android:id="@+id/ivService3"
              android:layout_width="wrap_content"
              android:paddingLeft="6dp"

              android:layout_height="wrap_content"
              android:src="@mipmap/star_gray"/>
            <ImageView
              android:id="@+id/ivService4"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="6dp"

              android:src="@mipmap/star_gray"/>
            <ImageView
              android:id="@+id/ivService5"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="6dp"

              android:src="@mipmap/star_gray"/>

            <TextView
              android:id="@+id/tvService"
              android:textSize="14sp"
              android:textColor="@color/describe_dark"
              android:layout_marginLeft="5dp"
              android:singleLine="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
          </LinearLayout>
          <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginRight="34dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="34dp"
              android:textSize="15sp"
              android:text="@string/attitude"
              android:textColor="@color/black"/>
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="15sp"
              android:text="和"
              android:visibility="invisible"
              android:textColor="@color/black"/>
            <ImageView
              android:id="@+id/ivAttitude1"
              android:paddingLeft="15dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"

              android:src="@mipmap/star_gray"/>
            <ImageView
              android:id="@+id/ivAttitude2"
              android:layout_width="wrap_content"
              android:paddingLeft="6dp"
              android:layout_height="wrap_content"
              android:src="@mipmap/star_gray"/>
            <ImageView
              android:id="@+id/ivAttitude3"
              android:layout_width="wrap_content"
              android:paddingLeft="6dp"

              android:layout_height="wrap_content"
              android:src="@mipmap/star_gray"/>
            <ImageView
              android:id="@+id/ivAttitude4"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="6dp"

              android:src="@mipmap/star_gray"/>
            <ImageView
              android:id="@+id/ivAttitude5"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="6dp"

              android:src="@mipmap/star_gray"/>

            <TextView
              android:id="@+id/tvAttitude"
              android:textSize="14sp"
              android:textColor="@color/describe_dark"
              android:layout_marginLeft="5dp"
              android:singleLine="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
          </LinearLayout>

          <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@color/line_dark"
            />
          <TextView
            android:id="@+id/tvComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:maxLines="2"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
          android:id="@+id/layReport"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@mipmap/bill_bg"
          android:orientation="vertical">
          <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:gravity="center_vertical"
            >
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="费用结算"
              android:textColor="@color/black"
              android:layout_alignParentLeft="true"
              android:textSize="17sp"/>
            <TextView
              android:id="@+id/tvClear"
              android:layout_alignParentRight="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#f6683c"
              android:text="已结算"

              android:textSize="16sp"
              />
          </RelativeLayout>
          <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:background="@color/line_dark"/>
          <RelativeLayout
            android:id="@+id/layNoClear"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
              android:layout_width="wrap_content"
