<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/layItem"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@mipmap/choice_car_bg">
  <RelativeLayout
    android:layout_marginTop="10.5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
      android:layout_marginLeft="24dp"
      android:layout_marginTop="14dp"
      android:id="@+id/tvCarNo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/black"
      android:textSize="16sp"/>
   <ImageView
     android:id="@+id/ivSelect"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginRight="12dp"
     android:layout_alignParentTop="true"
     android:layout_alignParentRight="true"
     android:src="@mipmap/choice_focus"/>
  </RelativeLayout>
  <View
    android:layout_marginLeft="26.5dp"
    android:layout_marginRight="26.5dp"
    android:layout_width="match_parent"
    android:layout_marginTop="7dp"
    android:background="@color/line_dark"
    android:layout_height="1dp"/>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:gravity="center_vertical"
    android:layout_marginLeft="29dp"
    android:orientation="horizontal">

    <ImageView
      android:layout_width="wrap_content"
      android:src="@mipmap/seat"
      android:layout_height="wrap_content"/>
    <TextView
      android:id="@+id/tvSeatNum"
      android:layout_width="wrap_content"
      android:layout_marginLeft="8dp"
      android:layout_height="wrap_content"
      android:textSize="15sp"
      android:textColor="@color/black"/>
    <View
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:layout_weight="1"/>
    <ImageView

      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@mipmap/gas"/>
    <TextView
      android:id="@+id/tvGas"
      android:layout_width="wrap_content"
      android:layout_marginLeft="8dp"
      android:layout_height="wrap_content"
      android:textSize="15sp"
      android:textColor="@color/black"/>
    <View
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:layout_weight="1"/>
    <ImageView

      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@mipmap/type_car"/>
    <TextView
      android:id="@+id/tvCarType"
      android:layout_width="wrap_content"
      android:layout_marginLeft="8dp"
      android:layout_height="wrap_content"
      android:textSize="15sp"
      android:textColor="@color/black"/>
    <View
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:layout_weight="1"/>

  </LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:gravity="center_vertical"
    android:layout_marginLeft="29dp"
    android:orientation="horizontal">

    <ImageView
      android:layout_width="wrap_content"
      android:src="@mipmap/model"
      android:layout_height="wrap_content"/>
    <TextView
      android:id="@+id/tvCnName"
      android:layout_width="wrap_content"
      android:layout_marginLeft="8dp"
      android:layout_height="wrap_content"
      android:textSize="15sp"
      android:textColor="@color/black"/>


  </LinearLayout>


</LinearLayout>