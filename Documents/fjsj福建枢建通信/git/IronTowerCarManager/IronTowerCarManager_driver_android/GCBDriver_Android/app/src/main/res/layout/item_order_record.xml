<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">
  <ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/record_itembg"/>
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_height="wrap_content">
    <RelativeLayout
      android:id="@+id/layOrder"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp">
      <TextView
        android:id="@+id/tvU"
        android:layout_marginRight="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="订单编号:"
        android:textColor="@color/black"
        android:textSize="16sp"/>
      <TextView
        android:id="@+id/tvOrderNo"
        android:layout_toRightOf="@id/tvU"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    </RelativeLayout>

    <View
      android:id="@+id/line1"
      android:layout_below="@id/layOrder"
      android:layout_marginTop="7dp"
      android:layout_marginBottom="7dp"
      android:layout_marginRight="10dp"
      android:layout_marginLeft="10dp"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="#e9e9e9"/>
    <RelativeLayout
      android:id="@+id/layStart"
      android:layout_below="@id/line1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
      <ImageView
        android:id="@+id/ivStart"
        android:layout_marginLeft="19dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/green_dot"
        android:layout_alignParentStart="true"/>
      <TextView
        android:id="@+id/tvBeginAddr"
        android:layout_toRightOf="@id/ivStart"
        android:textSize="17sp"
        android:layout_marginLeft="8dp"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:layout_marginRight="70dp"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        />

    </RelativeLayout>
    <ImageView
      android:id="@+id/ivGo"
      android:layout_below="@id/layStart"
      android:layout_marginLeft="22dp"
      android:layout_centerVertical="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@mipmap/go"/>
    <RelativeLayout
      android:id="@+id/layEnd"
      android:layout_below="@id/ivGo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
      <ImageView
        android:id="@+id/ivEnd"
        android:layout_marginLeft="19dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/red_dot"
        android:layout_alignParentStart="true"/>
      <TextView
        android:id="@+id/tvEndAddr"
        android:layout_toRightOf="@id/ivEnd"
        android:textSize="17sp"
        android:layout_marginLeft="8dp"
        android:singleLine="true"
        android:layout_marginRight="70dp"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        />

    </RelativeLayout>

    <RelativeLayout
      android:layout_below="@id/layEnd"
      android:layout_marginTop="7dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
      <ImageView
        android:id="@+id/ivTime"
        android:layout_marginLeft="19dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/time"
        android:layout_alignParentStart="true"/>
      <TextView
        android:id="@+id/tvBeginTime"
        android:layout_toRightOf="@id/ivTime"
        android:textSize="13.5sp"
        android:includeFontPadding="false"
        android:layout_marginLeft="8dp"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/describe_dark"
        />


    </RelativeLayout>
    <ImageView
      android:layout_marginRight="13dp"
      android:layout_marginTop="5dp"
      android:layout_below="@id/layStart"
      android:layout_alignParentRight="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@mipmap/over"/>




  </RelativeLayout>
</FrameLayout>