<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@mipmap/get_in_itembg">
  <RelativeLayout
    android:layout_marginTop="24dp"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
      android:id="@+id/tvCarNo"
      android:layout_centerVertical="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/black"
      android:textSize="16sp"
    />
    <TextView
      android:id="@+id/tvType"
      android:layout_centerVertical="true"
      android:textColor="@color/white"
      android:textSize="14.5sp"
      android:gravity="center"
      android:paddingLeft="6dp"
      android:paddingRight="6dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"/>
  </RelativeLayout>
  <View
    android:layout_marginLeft="26.5dp"
    android:layout_marginRight="26.5dp"
    android:layout_width="match_parent"
    android:layout_marginTop="7dp"
    android:background="@color/line_dark"
    android:layout_height="1dp"/>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:gravity="center_vertical"
    android:layout_marginLeft="29dp"
    android:orientation="horizontal">

    <ImageView
      android:layout_width="wrap_content"
      android:src="@mipmap/park_icon"
      android:layout_height="wrap_content"/>
    <TextView
      android:id="@+id/tvFleetName"
      android:layout_width="wrap_content"
      android:layout_marginLeft="8dp"
      android:layout_height="wrap_content"
      android:textSize="15sp"
      android:textColor="@color/black"/>


  </LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:gravity="center_vertical"
    android:layout_marginLeft="29dp"
    android:layout_marginRight="29dp"
    android:orientation="horizontal">

    <ImageView
      android:layout_width="wrap_content"
      android:src="@mipmap/unit_icon"
      android:layout_height="wrap_content"/>
    <TextView
      android:id="@+id/tvApplyDesc"
      android:layout_width="wrap_content"
      android:singleLine="true"
      android:layout_marginLeft="8dp"
      android:layout_height="wrap_content"
      android:textSize="15sp"
      android:textColor="@color/black"/>


  </LinearLayout>

  <LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:gravity="center_vertical"
    android:layout_marginLeft="29dp"
    android:orientation="horizontal">

    <ImageView
      android:layout_width="wrap_content"
      android:src="@mipmap/time_icon"
      android:layout_height="wrap_content"/>
    <TextView
      android:id="@+id/tvRealOutTime"
      android:layout_width="wrap_content"
      android:layout_marginLeft="8dp"
      android:layout_height="wrap_content"
      android:textSize="15sp"
      android:textColor="@color/describe_dark"/>


  </LinearLayout>



</LinearLayout>