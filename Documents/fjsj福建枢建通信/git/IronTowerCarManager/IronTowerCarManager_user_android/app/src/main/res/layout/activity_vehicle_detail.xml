<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:gravity="center_horizontal"
  android:orientation="vertical">
  <ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/bg"/>

    <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
          android:layout_marginTop="22dp"
          android:layout_width="76dp"
          android:layout_height="76dp"
          android:src="@mipmap/car_icon"/>
        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="7dp"
          android:orientation="horizontal">
          <TextView
            android:id="@+id/tvCarNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            />
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"

            android:text="|"
            android:textColor="@color/white"
            />
          <TextView
            android:id="@+id/tvCarType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            />
        </LinearLayout>
        
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@mipmap/car_detialbg"
          android:orientation="vertical">
          <LinearLayout
            android:layout_marginLeft="35dp"
            android:layout_marginTop="18dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="43dp">
            <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@mipmap/use_type"/>
            <TextView
              android:layout_marginLeft="12dp"
              android:layout_width="75dp"
              android:layout_height="wrap_content"
              android:text="厂牌名称:"
              android:textColor="@color/describe_dark"
              android:textSize="16sp"/>
            <TextView
              android:id="@+id/tvCnName"
              android:layout_marginLeft="6dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="16sp"
              android:textColor="@color/black"/>
          </LinearLayout>
          <LinearLayout
            android:layout_marginLeft="35dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="43dp">
            <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@mipmap/model"/>
            <TextView
              android:layout_marginLeft="12dp"
              android:layout_width="75dp"
              android:layout_height="wrap_content"
              android:text="车辆型号:"
              android:textColor="@color/describe_dark"
              android:textSize="16sp"/>
            <TextView
              android:id="@+id/tvModelName"
              android:layout_marginLeft="6dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="16sp"
              android:textColor="@color/black"/>
          </LinearLayout>

          <View
            android:layout_width="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            android:layout_height="1dp"
            android:background="@color/line_dark"/>
          <LinearLayout
            android:layout_marginLeft="35dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="43dp">
            <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@mipmap/seat"/>
            <TextView
              android:layout_marginLeft="12dp"
              android:layout_width="75dp"
              android:layout_height="wrap_content"
              android:text="座位数:"
              android:textColor="@color/describe_dark"
              android:textSize="16sp"/>
            <TextView
              android:id="@+id/tvSeatNum"
              android:layout_marginLeft="6dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="16sp"
              android:textColor="@color/black"/>
          </LinearLayout>
          <LinearLayout
            android:layout_marginLeft="35dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="43dp">
            <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@mipmap/gas"/>
            <TextView
              android:layout_marginLeft="12dp"
              android:layout_width="75dp"
              android:layout_height="wrap_content"
              android:text="排气量:"
              android:textColor="@color/describe_dark"
              android:textSize="16sp"/>
            <TextView
              android:id="@+id/tvOutputVolume"
              android:layout_marginLeft="6dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="16sp"
              android:textColor="@color/black"/>
          </LinearLayout>
          <LinearLayout
            android:layout_marginLeft="35dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="43dp">
            <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@mipmap/colour"/>
            <TextView
              android:layout_marginLeft="12dp"
              android:layout_width="75dp"
              android:layout_height="wrap_content"
              android:text="颜色:"
              android:textColor="@color/describe_dark"
              android:textSize="16sp"/>
            <TextView
              android:id="@+id/tvCarColor"
              android:layout_marginLeft="6dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="16sp"
              android:textColor="@color/black"/>
          </LinearLayout>
          <View
            android:layout_width="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            android:layout_height="1dp"
            android:background="@color/line_dark"/>
          <LinearLayout
            android:layout_marginLeft="35dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="43dp">
            <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@mipmap/purpose"/>
            <TextView
              android:layout_marginLeft="12dp"
              android:layout_width="75dp"
              android:layout_height="wrap_content"
              android:text="车辆用途:"
              android:textColor="@color/describe_dark"
              android:textSize="16sp"/>
            <TextView
              android:id="@+id/tvPurpose"
              android:layout_marginLeft="6dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="16sp"
              android:textColor="@color/black"/>
          </LinearLayout>
          <LinearLayout
            android:layout_marginLeft="35dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="43dp">
            <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@mipmap/situation"/>
            <TextView
              android:layout_marginLeft="12dp"
              android:layout_width="75dp"
              android:layout_height="wrap_content"
              android:text="车辆现状:"
              android:textColor="@color/describe_dark"
              android:textSize="16sp"/>
            <TextView
              android:id="@+id/tvState"
              android:layout_marginLeft="6dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="16sp"
              android:textColor="@color/black"/>
          </LinearLayout>
          <View
            android:layout_width="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            android:layout_height="1dp"
            android:background="@color/line_dark"/>
          <LinearLayout
            android:layout_marginLeft="35dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="43dp">
            <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@mipmap/unit_icon"/>
            <TextView
              android:layout_marginLeft="12dp"
              android:layout_width="75dp"
              android:layout_height="wrap_content"
              android:text="单位名称:"
              android:textColor="@color/describe_dark"
              android:textSize="16sp"/>
            <TextView
              android:id="@+id/tvOrgName"
              android:layout_marginLeft="6dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="16sp"
              android:textColor="@color/black"/>
          </LinearLayout>
          <LinearLayout
            android:layout_marginLeft="35dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="43dp">
            <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@mipmap/date_icon"/>
            <TextView
              android:layout_marginLeft="12dp"
              android:layout_width="75dp"
              android:layout_height="wrap_content"
              android:text="登记日期:"
              android:textColor="@color/describe_dark"
              android:textSize="16sp"/>
            <TextView
              android:id="@+id/tvRegisterDate"
              android:layout_marginLeft="6dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="16sp"
              android:textColor="@color/black"/>
          </LinearLayout>







        </LinearLayout>


      </LinearLayout>
      </android.support.v4.widget.NestedScrollView>
      <android.support.v7.widget.Toolbar

        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetStart="0dp"
        >
        >
        <RelativeLayout
          android:id="@+id/toolbar_back"
          android:layout_width="55dp"
          android:layout_height="match_parent"
          android:background="?android:attr/selectableItemBackground"

          android:clickable="true">
          <ImageView

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_arrow_back_white_24dp"/>

        </RelativeLayout>





      </android.support.v7.widget.Toolbar>

    </FrameLayout>





</FrameLayout>