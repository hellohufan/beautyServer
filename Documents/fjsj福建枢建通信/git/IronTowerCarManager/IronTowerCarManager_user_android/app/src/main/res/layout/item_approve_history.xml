<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@mipmap/approve_history_itembg"
  android:orientation="vertical">
  <RelativeLayout
    android:id="@+id/layOrder"
    android:layout_alignParentTop="true"
    android:layout_marginTop="23dp"
    android:layout_marginLeft="23dp"
    android:layout_marginRight="23dp"
    android:gravity="center_vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/tv1"
      android:text="@string/order_no"
      android:textSize="16sp"
      android:textColor="@color/black"
      android:layout_alignParentLeft="true"/>
    <TextView
      android:id="@+id/tvOrderNo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/tv1"
      android:layout_toLeftOf="@id/tvDealState"
      android:layout_marginLeft="12dp"
      android:singleLine="true"
      android:textColor="@color/black"
      android:textSize="16sp"
      />
    <TextView
      android:id="@+id/tvDealState"
      android:layout_alignParentRight="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:textSize="15sp"
      android:textColor="@color/white"
      android:paddingTop="1dp"
      android:paddingBottom="1dp"
      android:paddingLeft="7dp"
      android:paddingRight="7dp"/>

  </RelativeLayout>
  <View
    android:id="@+id/view1"
    android:layout_below="@id/layOrder"
    android:layout_width="match_parent"
    android:layout_marginLeft="23dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginRight="23dp"
    android:layout_height="1dp"
    android:background="@color/line_dark"/>
  <RelativeLayout
    android:id="@+id/layStartPosition"
    android:layout_below="@id/view1"
    android:layout_marginLeft="29dp"
    android:layout_marginRight="29dp"
    android:gravity="center_vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
      android:layout_centerVertical="true"
      android:id="@+id/iv1"
      android:src="@mipmap/start_dot"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"/>
    <TextView
      android:id="@+id/tvBeginAddr"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/iv1"
      android:singleLine="true"

      android:layout_marginLeft="7dp"
      android:textColor="@color/black"
      android:textSize="16sp"
      />

  </RelativeLayout>
  <ImageView
    android:id="@+id/ivGo"
    android:layout_below="@id/layStartPosition"
    android:layout_marginLeft="30dp"
    android:layout_centerVertical="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@mipmap/go"/>

  <RelativeLayout
    android:layout_below="@id/ivGo"
    android:id="@+id/layEndPosition"
    android:layout_marginLeft="29dp"
    android:layout_marginTop="3dp"
    android:layout_marginRight="29dp"
    android:gravity="center_vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
      android:layout_centerVertical="true"
      android:id="@+id/iv2"
      android:src="@mipmap/end_dot"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"/>
    <TextView
      android:id="@+id/tvEndAddr"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/iv2"
      android:layout_marginLeft="7dp"
      android:singleLine="true"
      android:textColor="@color/black"
      android:textSize="16sp"
      />

  </RelativeLayout>
  <RelativeLayout
    android:id="@+id/layName"
    android:layout_below="@id/layEndPosition"
    android:layout_marginLeft="28dp"
    android:layout_marginTop="7dp"
    android:layout_marginRight="29dp"
    android:gravity="center_vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
      android:layout_centerVertical="true"
      android:id="@+id/reR"
      android:src="@mipmap/user_car_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"/>
    <TextView
      android:id="@+id/tvT"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/reR"
      android:layout_marginLeft="7dp"
      android:textColor="@color/describe_dark"
      android:textSize="13dp"
      android:text="用车人:"
      />
    <TextView
      android:id="@+id/tvPassenger"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/tvT"
      android:layout_marginLeft="7dp"
      android:singleLine="true"
      android:textColor="@color/describe_dark"
      android:textSize="13dp"
      />

  </RelativeLayout>
  <RelativeLayout
    android:layout_below="@id/layName"
    android:layout_marginLeft="28dp"
    android:layout_marginTop="7dp"
    android:layout_marginRight="29dp"
    android:gravity="center_vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
      android:layout_centerVertical="true"
      android:id="@+id/reR1"
      android:src="@mipmap/time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"/>
    <TextView
      android:id="@+id/tvT1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/reR1"
      android:layout_marginLeft="7dp"
      android:textColor="@color/describe_dark"
      android:textSize="13dp"
      android:text="审批时间:"
      />
    <TextView
      android:id="@+id/tvDealTime"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/tvT1"
      android:singleLine="true"
      android:layout_marginLeft="7dp"
      android:textColor="@color/describe_dark"
      android:textSize="13dp"
      />

  </RelativeLayout>






</RelativeLayout>