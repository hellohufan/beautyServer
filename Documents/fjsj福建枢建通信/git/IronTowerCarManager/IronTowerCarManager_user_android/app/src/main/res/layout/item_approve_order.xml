<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_marginLeft="7dp"
  android:layout_marginRight="7dp"
  android:layout_height="wrap_content"
  android:background="@mipmap/item_blue_bg"
  android:orientation="vertical">
  <RelativeLayout
    android:id="@+id/layOrder"
    android:layout_alignParentTop="true"
    android:layout_marginTop="23dp"
    android:layout_marginLeft="23dp"
    android:layout_marginRight="23dp"
    android:gravity="center_vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/tv1"
      android:text="用车人:"
      android:textSize="16sp"
      android:textColor="@color/black"
      android:layout_alignParentLeft="true"/>
    <TextView
      android:id="@+id/tvPassenger"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/tv1"
      android:layout_toLeftOf="@id/tvDistanceType"
      android:singleLine="true"
      android:layout_marginLeft="12dp"
      android:textColor="@color/black"
      android:textSize="16sp"
      />
    <TextView
      android:id="@+id/tvDistanceType"
      android:layout_alignParentRight="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:textSize="15sp"
      android:textColor="@color/white"
      android:paddingLeft="6dp"
      android:paddingRight="6dp"/>

  </RelativeLayout>
  <View
    android:id="@+id/view1"
    android:layout_below="@id/layOrder"
    android:layout_width="match_parent"
    android:layout_marginLeft="23dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:layout_marginRight="23dp"
    android:layout_height="1dp"
    android:background="@color/line_dark"/>
  <RelativeLayout
    android:id="@+id/layStartPosition"
    android:layout_below="@id/view1"
    android:layout_marginLeft="29dp"
    android:layout_marginRight="29dp"
    android:gravity="center_vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
      android:layout_centerVertical="true"
      android:id="@+id/iv1"
      android:src="@mipmap/start_dot"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"/>
    <TextView
      android:id="@+id/tvBeginAddr"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/iv1"
      android:layout_marginLeft="7dp"
      android:singleLine="true"
      android:textColor="@color/black"
      android:textSize="16sp"
      />

  </RelativeLayout>
  <ImageView
    android:id="@+id/ivGo"
    android:layout_below="@id/layStartPosition"
    android:layout_marginLeft="30dp"
    android:layout_centerVertical="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@mipmap/go"/>

  <RelativeLayout
    android:layout_below="@id/ivGo"
    android:id="@+id/layEndPosition"
    android:layout_marginLeft="29dp"
    android:layout_marginTop="3dp"
    android:layout_marginRight="29dp"
    android:gravity="center_vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
      android:layout_centerVertical="true"
      android:id="@+id/iv2"
      android:src="@mipmap/end_dot"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"/>
    <TextView
      android:id="@+id/tvEndAddr"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:singleLine="true"
      android:layout_toRightOf="@id/iv2"
      android:layout_marginLeft="7dp"

      android:textColor="@color/black"
      android:textSize="16sp"
      />

  </RelativeLayout>
  <RelativeLayout
    android:id="@+id/layCommitTime"
    android:layout_below="@id/layEndPosition"
    android:layout_marginLeft="27dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="29dp"
    android:gravity="center_vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
      android:layout_centerVertical="true"
      android:id="@+id/reR1"
      android:src="@mipmap/time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"/>

    <TextView
      android:id="@+id/tvCommitTime"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/reR1"
      android:layout_marginLeft="7dp"
      android:textColor="@color/describe_dark"
      android:textSize="13dp"
      />

  </RelativeLayout>
  <RelativeLayout
    android:layout_below="@id/layCommitTime"
    android:layout_marginLeft="27dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="15dp"
    android:layout_marginRight="29dp"
    android:gravity="center_vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
      android:id="@+id/ivOrgName"
      android:layout_centerVertical="true"
      android:src="@mipmap/model"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"/>

    <TextView
      android:id="@+id/tv2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/ivOrgName"
      android:layout_marginLeft="7dp"
      android:textColor="@color/describe_dark"
      android:textSize="13dp"
      android:text="用车单位:"
      />
    <TextView
      android:id="@+id/tvOrgName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/tv2"
      android:layout_marginLeft="7dp"
      android:textColor="@color/describe_dark"
      android:textSize="13dp"
      />

  </RelativeLayout>


</RelativeLayout>