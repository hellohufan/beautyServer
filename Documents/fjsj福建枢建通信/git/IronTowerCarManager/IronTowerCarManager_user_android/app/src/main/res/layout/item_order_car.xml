<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"

  android:layout_height="112dp"
  android:orientation="vertical">
  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/line_dark"/>
  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="7dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">
    <TextView
      android:id="@+id/tvCarNo"
      android:layout_width="wrap_content"
      android:textSize="17sp"
      android:textColor="@color/black"
      android:layout_height="wrap_content"
     />
    <View
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:layout_weight="1"/>
    <TextView
      android:id="@+id/tvState"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="16sp"
      android:textColor="@color/colorPrimary"
     />
    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@mipmap/arrow"/>

  </LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <ImageView
      android:layout_width="44dp"
      android:layout_height="44dp"
      android:src="@mipmap/user_photo"/>
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="12dp"
      android:orientation="vertical">
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
          android:id="@+id/tvDriverName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="11dp"
          android:textColor="@color/black"
          android:textSize="17sp"/>
        <TextView
          android:id="@+id/tvDN"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="(司机)"
          android:textColor="@color/describe_dark"
          android:textSize="17sp"/>

      </LinearLayout>
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
          android:id="@+id/tvSeatNum"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingLeft="7dp"
          android:paddingRight="7dp"
          android:paddingTop="1dp"
          android:visibility="gone"
          android:layout_marginRight="11dp"
          android:paddingBottom="1dp"
          android:textSize="15sp"
          android:textColor="@color/white"
          android:background="@mipmap/label_blue"
          />
        <TextView
          android:id="@+id/tvCarType"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="15sp"
          android:paddingLeft="7dp"
          android:paddingRight="7dp"
          android:paddingTop="1dp"
          android:layout_marginRight="11dp"
          android:paddingBottom="1dp"
          android:textColor="@color/white"
          android:background="@mipmap/label_red"
          />
        <TextView
          android:id="@+id/tvFeeType"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingLeft="7dp"
          android:paddingRight="7dp"
          android:paddingTop="1dp"
          android:paddingBottom="1dp"
          android:textSize="15sp"
          android:textColor="@color/white"
          android:background="@mipmap/label_yellow"
          />


      </LinearLayout>


    </LinearLayout>

    <View
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:layout_weight="1"/>

  </LinearLayout>


</LinearLayout>