<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/layItem"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@mipmap/driver_bg1">
  <RelativeLayout
    android:layout_marginTop="10.5dp"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
      android:id="@+id/tvUserName"
      android:layout_marginLeft="24dp"
      android:layout_marginTop="14dp"
      android:layout_centerVertical="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/black"
      android:textSize="16sp"
      />
    <ImageView
      android:id="@+id/ivSelect"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginRight="12dp"
      android:layout_alignParentTop="true"
      android:layout_alignParentRight="true"
      android:src="@mipmap/choice_focus"/>
  </RelativeLayout>
  <View
    android:layout_marginLeft="26.5dp"
    android:layout_marginRight="26.5dp"
    android:layout_width="match_parent"
    android:layout_marginTop="7dp"
    android:background="@color/line_dark"
    android:layout_height="1dp"/>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:gravity="center_vertical"
    android:layout_marginLeft="29dp"
    android:layout_marginRight="29dp"
    android:orientation="horizontal">
    <LinearLayout
      android:layout_width="0dp"
      android:layout_weight="1.5"
      android:orientation="horizontal"
      android:gravity="center_vertical"
      android:layout_height="wrap_content">
      <ImageView
        android:layout_width="wrap_content"
        android:src="@mipmap/sex"
        android:layout_height="wrap_content"/>
      <TextView
        android:id="@+id/tvSex"
        android:layout_width="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/describe_dark"/>
    </LinearLayout>

    <LinearLayout
      android:layout_width="0dp"
      android:layout_weight="1.5"
      android:orientation="horizontal"
      android:gravity="center_vertical"
      android:layout_height="wrap_content">
    <ImageView

      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@mipmap/license"/>
    <TextView
      android:id="@+id/tvLicense"
      android:layout_width="wrap_content"
      android:layout_marginLeft="8dp"
      android:layout_height="wrap_content"
      android:textSize="15sp"
      android:textColor="@color/describe_dark"/>
    </LinearLayout>
    <LinearLayout
      android:layout_width="0dp"
      android:layout_weight="2"
      android:orientation="horizontal"
      android:gravity="center_vertical"
      android:layout_height="wrap_content">
    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@mipmap/mobile_carer"/>
    <TextView
      android:id="@+id/tvPhoneNo"
      android:layout_width="wrap_content"
      android:layout_marginLeft="8dp"
      android:singleLine="true"
      android:layout_height="wrap_content"
      android:textSize="15sp"
      android:textColor="@color/describe_dark"/>
    </LinearLayout>

  </LinearLayout>


</LinearLayout>